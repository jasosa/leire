
<TableLayout android:id="@+id/TableLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent"
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:background="#A4C639">
	<TextView android:text="@string/productdetail.field.product" 
	android:id="@+id/productname" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:textColor="#FFFFFF"
	android:textStyle="bold"
	android:layout_marginLeft="10dip">
	</TextView>
	<LinearLayout android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:layout_marginBottom="0dip" 
	android:background="@drawable/product_background_shape">
		<ImageView android:id="@+id/filltypeicon"
		 android:layout_width="wrap_content" 
		 android:layout_marginRight="6dip"
		 android:src="@drawable/face_controlled_by" 
		 android:layout_height="wrap_content"
		 android:layout_gravity="center_vertical">
		</ImageView>
		<LinearLayout
		        android:orientation="vertical"
		        android:layout_width="0dip"
		        android:layout_weight="1"
		        android:layout_height="wrap_content">
			<TextView android:text="@+id/TextView05" 
			android:id="@+id/productnamevalue" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
					android:textStyle="bold"
			android:textColor="#ffffff" android:textSize="20sp">
			</TextView>
			<TextView android:text="@+id/TextView06" 
			android:id="@+id/productbrandvalue" 
			android:layout_width="fill_parent"
			 android:layout_height="wrap_content"
			 android:layout_weight="1"
			 android:textColor="#ffffff" android:textSize="15sp">
			</TextView>
		</LinearLayout>
		 <ImageView
        android:id="@+id/product_update_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dip"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        android:src="@android:drawable/ic_input_add" />
	</LinearLayout>
	<TextView android:id="@+id/productInfo" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:textColor="#FFFFFF"
	android:textStyle="bold"
	android:layout_marginLeft="10dip" android:text="InformaciÃ³n adicional">
	</TextView>
	<LinearLayout
	android:orientation="vertical" 	
	android:background="@drawable/product_background_shape" android:layout_height="wrap_content" android:layout_weight="1">
		<TextView android:text="@string/productdetail.field.category" 
		android:id="@+id/productcategory" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:textColor="#ffffff"
		android:layout_marginLeft="10dip" android:textSize="18sp">
		</TextView>
		<TextView android:text="@+id/TextView07" 
		android:id="@+id/productcategoryvalue" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:textColor="#ffffff"
		android:layout_marginLeft="10dip"
		android:layout_marginBottom="10dip" android:textSize="15sp">
		</TextView>
		<TextView android:text="@string/productdetail.field.manufacturer"
			 android:id="@+id/productmanufacturer" 
			 android:layout_width="wrap_content" 
			 android:layout_height="wrap_content"
			 android:textColor="#ffffff"
			 android:textStyle="bold"
			 android:layout_marginLeft="10dip" android:textSize="18sp">
			 </TextView>
			<TextView android:text="@+id/TextView08" 
			android:id="@+id/productmanufacturervalue" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textColor="#ffffff"
			android:layout_marginLeft="10dip" android:textSize="15sp"
			android:layout_marginBottom="10dip">
			</TextView>
		<TextView android:text="@string/productdetail.field.ean"
			 android:id="@+id/productean" 
			 android:layout_width="wrap_content" 
			 android:layout_height="wrap_content"
			 android:textColor="#ffffff"
			 android:textStyle="bold"
			 android:layout_marginLeft="10dip" android:textSize="18sp">
			 </TextView>
			<TextView android:text="@+id/TextView08" 
			android:id="@+id/producteanvalue" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textColor="#ffffff"
			android:layout_marginLeft="10dip" android:textSize="15sp">
			</TextView>
			
</LinearLayout>
</TableLayout>
