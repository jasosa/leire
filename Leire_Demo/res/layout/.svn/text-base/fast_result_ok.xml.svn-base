<LinearLayout 
android:id="@+id/fast_result_ok_root" 
android:orientation="vertical" 
android:layout_width="280dip" 
android:layout_height="wrap_content" 
xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@drawable/list_container_green"
android:layout_gravity="center_horizontal"

>
<TextView 
style="@style/Text.Green.Bold.Big"
android:text="@string/scannerresult.product.ok" 
android:layout_width="250dip"
android:layout_height="wrap_content"
android:layout_marginTop="10dip"
android:layout_marginLeft="10dip"
android:layout_marginRight="10dip">
</TextView>
<TextView 
style="@style/Text.Green.Bold"
android:text="@string/productdetail.field.product" 
android:id="@+id/productnamevalue" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:layout_marginTop="10dip"
android:layout_marginLeft="10dip">
</TextView>
<TextView 
style="@style/Text.DarkGray"
android:text="@string/productdetail.field.brand" 
android:id="@+id/productbrandvalue" 
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="10dip">
</TextView>
<LinearLayout android:layout_marginTop="10dip" 
android:layout_marginBottom="10dip"
android:layout_marginLeft="10dip"
 android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@color/transparent">
<TextView 
style="@style/Text.DarkGray"
android:text="@string/scannerresult.product.view.detail" 
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_vertical">
</TextView>
<ImageButton 
android:id="@+id/button.view.detail"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginLeft="12dip"
android:background="@drawable/rollover_selector">
</ImageButton>
</LinearLayout>
</LinearLayout>
